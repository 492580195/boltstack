<XLUE>
    <resource>
        <!--//颜色-->
        <color id="system.white"  red="255" green="255" blue="255" alpha="255" />
        <color id="system.lightgray"   red="240" green="240" blue="240" alpha="255" />
        <color id="system.gray"   red="125" green="125" blue="125" alpha="255" />
        <color id="system.darkgray" red="75" green="75" blue="75" alpha="255" />
        <color id="system.black"  red="0"   green="0"   blue="0"   alpha="255" />
        <color id="system.orange" red="255" green="132" blue="0"  alpha="255" />
        <color id="system.lightorange" red="255" green="200" blue="0"  alpha="255" />
        <color id="system.blue" red="44"  green="151" blue="241" alpha="255" />

        <color id="system.normal.back"  red="255" green="255" blue="255" alpha="255" />
        <color id="system.hover.back"   red="243" green="243" blue="243" alpha="255" />
